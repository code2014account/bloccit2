<h1> Make a new post! </h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelings for posts</p>
    <ul>
      <li> Must be about Coffee </li>
      <li> No Rhymes </li>
      <li> Take it easy on the Hashtags </li>
    </ul>
  </div>
  <div class ="col-md-8">
  <%= form_for [@topic, @post] do |f| %>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter post body" %>
      </div>
      <div class="form-group">

        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>

    <% end %>
  </div>
</div>
