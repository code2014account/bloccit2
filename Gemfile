source 'https://rubygems.org'

gem 'rails', '4.2.5'
# #1
group :production do
  gem 'pg'
end

# #2
group :development do
  gem 'sqlite3'
end

#Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'

# UGLIFIRE = compressor JS assests
gem 'uglifier', '>= 1.3.0'

# COFFEESCRIPT = .coffee assets & values
gem 'coffee-rails', '~> 4.1.0'

# JQUERY for JS lib
gem 'jquery-rails'

# TRUBOLINKS = makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'
