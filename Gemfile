source 'https://rubygems.org'

gem 'rails', '4.2.5'
# #1
group :production do
  gem 'pg'
  gem 'rails_12factor'
end

# #2
group :development do
  gem 'sqlite3'
end

group :development, :test do
  gem 'rspec-rails', '~> 3.0'
  gem 'shoulda'
end

#Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'

# UGLIFIRE = compressor JS assests
gem 'uglifier', '>= 1.3.0'

# COFFEESCRIPT = .coffee assets & values
gem 'coffee-rails', '~> 4.1.0'

# JQUERY for JS lib
gem 'jquery-rails'

# TRUBOLINKS = makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

# Other Gems
gem 'bootstrap-sass'

# Used for encrypting User password
gem 'bcrypt'
